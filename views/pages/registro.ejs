<!DOCTYPE html>
<html>
<head>
  <% include ../partials/header.ejs %>
  <link rel="stylesheet" href="/stylesheets/login-style.css">
  <script src="/js/registro.js"></script>
</head>

<body>

  <div class="login-form">
    <form method="POST" action="" id="formulario">
      <h2 class="text-center">Registro</h2>   
      <div class="form-group">
        <input type="text" class="form-control required"  name="nombre" id="nombre" placeholder="Ingresa nombre">
      </div>
      <div class="form-group">
        <input type="text" class="form-control required email"  name="correo" id="correo" placeholder="Ingresa correo">
      </div>
      <div class="form-group">
        <input type="text" class="form-control required RFC"  name="rfc" id="rfc" placeholder="Ingresa RFC">
      </div>
      <div class="form-group">
        <input type="password" class="form-control required" data-rule-equalTo="#clave2" name="clave1" id="clave1" placeholder="Ingresa la contraseña">
      </div>        
      <div class="form-group">
        <input type="password" class="form-control required" data-rule-equalTo="#clave1" name="clave2" id="clave2" placeholder="Confirma tu contraseña">
      </div>        
      <div class="form-group">
        <input class="btn btn-primary btn-block" id="btn-registrarse" type="submit" value="Registrarse"/>
          <!--button type="submit" id="btn-registrarse" class="btn btn-primary btn-block">Registrarse</button-->
      </div>
      <!--div class="bottom-action clearfix">
        <label class="float-left form-check-label"><input type="checkbox"> Remember me</label>
        <a href="#" class="float-right">Forgot Password?</a>
      </div-->
    </form>
  </div>
  <div id="myModal" class="myModal modal fade" role="dialog">
    <div class="modal-dialog">
  
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 id="modal-encabezado" class="modal-title">Modal Header</h4>
        </div>
        <div class="modal-body">
          <p id="modal-texto">Some text in the modal.</p>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
        </div>
      </div>
  
    </div>
  </div>
  <div id="modalCargando" data-backdrop="static" class="myModal modal fade" role="dialog">
    <div class="modal-dialog modal-dialog-centered bd-example-modal-sm" role="document">
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-body">
          <p id="modal-texto">Cargando..</p>
          <div class="spinner-border"></div>
        </div>
      </div>
    </div>
  </div>

</body>
</html>
